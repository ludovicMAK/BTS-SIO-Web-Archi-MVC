{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <form method="POST">
        <div class="infoNom">
            <label>nom</label>
            <input type="text" name="nom" value= "{{ nom }}" requiered="requiered" >
        </div>
        <div class="infoPrenom">
            <label>prenom</label>
            <input type="text" name="prenom" value= "{{ prenom }}" requiered="requiered" >
        </div>
        <div class="infoEmail">
            <label>email</label>
            <input type="text" name="email"value= "{{ email }}" requiered="requiered">
        </div>
        <div class="infoLogin">
            <label>login</label>
            <input type="text" name="login" value= "{{ login }}" requiered="requiered">
        </div>
        <div class="infoMdp">
            <label>mot de passe</label>
            <input type="password" name="mdp"placeholder="Entrez votre mot de passe..." >
        </div>

        <div class="messageErreur">
            {% for lesMessages in erreur %}
                <span>{{ lesMessages }}</span><br>
            {% endfor %}
        </div>
        <input type="submit" name="valid_inscription" onclick="verifierValeur()">
    </form>
    <a href="/etudiant"> Retour</a>

{% endblock %}