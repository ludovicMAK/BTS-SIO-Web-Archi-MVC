{% extends "base.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <form method="POST">
        <div class="infoNom">
        <input type="text" name="nom" placeholder= "Votre nom...">
        </div>
        <div class="infoPrenom">
        <input type="text" name="prenom" placeholder= "Votre prenom..."  >
        </div>
        <div class="infoEmail">
        <input type="text" name="email"placeholder= "Votre adresse mail..." >
        </div>
        <div class="infoLogin">
        <input type="text" name="login" placeholder= "Votre login..." >
        </div>
        <div class="infoMdp">
        <input type="password" name="mdp"placeholder="Entrez votre mot de passe..." >
        </div>
        <div class="infoMdpConfirmation">
        <input type="password" name="mdpConfirmation" placeholder="Confirmer votre mot de passe...">
        </div>
        <div class="messageErreur">
            {% for lesMessages in erreur %}
                <span>{{ lesMessages }}</span><br>
            {% endfor %}
        </div>
        <input type="submit" name="valid_inscription" onclick="verifierValeur()">
    </form>
<a href="/etudiant">Retour</a>
{% endblock %}